{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": ["src", "index.d.ts"],
  "exclude": ["node_modules", "built"]
}
